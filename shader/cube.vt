#version 410

uniform mat4 projection;
uniform mat4 camera;
uniform mat4 model;

layout (location = 0) in vec3 vp;
layout (location = 1) in vec2 vertTexCoord;

out vec2 fragTexCoord;

//in vec3 vp;
void main() {
    fragTexCoord = vertTexCoord;
    gl_Position = projection * camera  * model * vec4(vp, 1.0);
}